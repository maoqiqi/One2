<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LanguageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ToolBarDark"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/language_setting" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:padding="16dp"
            android:text="@string/language_description"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:padding="16dp"
            android:text="@string/language_setting"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:padding="16dp"
            android:text="@string/language_auto"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/rl_text_color"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/color_music">

            <TextView
                android:id="@+id/iv_text_color"
                android:layout_width="@dimen/dp_22"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="#99000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_40"
            android:background="@color/color_music">

            <TextView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_40"
                android:layout_centerInParent="true"
                android:background="#99000000" />
        </RelativeLayout>
    </LinearLayout>
</layout>