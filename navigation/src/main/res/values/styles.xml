<resources>

    <style name="AppTheme.Navigation">
        <item name="colorPrimary">@color/color_navigation</item>
        <item name="colorPrimaryDark">@color/color_navigation</item>
    </style>

    <!--主页菜单文字样式-->
    <style name="navigation_appearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/song</item>
    </style>

    <!--项目描述标题栏展开样式-->
    <style name="project_expanded_appearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="android:fontFamily">@font/song</item>
    </style>

    <!--CheckBox主题-->
    <style name="check_box_switch" parent="Theme.AppCompat.Light.NoActionBar">
        <!--1-->
        <item name="colorAccent">@color/color_navigation</item>
        <!--2-->
        <!--<item name="colorControlNormal">@color/colorTextGrayDark</item>-->
        <!--<item name="colorControlActivated">@color/color_navigation</item>-->
    </style>

    <style name="title">
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/song</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/song</item>
    </style>

    <style name="btn" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/song</item>
    </style>
</resources>